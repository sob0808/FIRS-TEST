<odoo>
    <record id="view_delivery_batch_list" model="ir.ui.view">
        <field name="name">delivery.batch.list</field>
        <field name="model">delivery.batch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="arrival_date"/>
                <field name="state"/>
                <field name="location_id"/>
            </list>
        </field>
    </record>

    <record id="view_delivery_batch_form" model="ir.ui.view">
        <field name="name">delivery.batch.form</field>
        <field name="model">delivery.batch</field>
        <field name="arch" type="xml">
            <form string="Delivery Batch">
                <header>
                    <button name="action_receive" string="Mark Received" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_process" string="Mark Processed" type="object" invisible="state != 'received'"/>
                    <field name="state" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="arrival_date"/>
                        <field name="location_id"/>
                    </group>
                    <notebook>
                        <page string="Packages">
                            <field name="package_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="recipient_name"/>
                                    <field name="weight"/>
                                    <field name="status"/>
                                    <field name="location_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <button name="%(action_open_scan_wizard)d" type="action" string="Start Scanning"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_delivery_batch" model="ir.actions.act_window">
        <field name="name">Delivery Batches</field>
        <field name="res_model">delivery.batch</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_delivery_root" name="Delivery Intake"/>
    <menuitem id="menu_delivery_batches" name="Batches" parent="menu_delivery_root" action="action_delivery_batch"/>
</odoo>

<odoo>
    <record id="view_temu_location_list" model="ir.ui.view">
        <field name="name">temu.location.list</field>
        <field name="model">temu.location</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_temu_location_form" model="ir.ui.view">
        <field name="name">temu.location.form</field>
        <field name="model">temu.location</field>
        <field name="arch" type="xml">
            <form string="TEMU Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_temu_location" model="ir.actions.act_window">
        <field name="name">TEMU Locations</field>
        <field name="res_model">temu.location</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_temu_settings" name="TEMU Settings" parent="menu_delivery_root"/>
    <menuitem id="menu_temu_locations" name="Locations" parent="menu_temu_settings" action="action_temu_location"/>
</odoo>

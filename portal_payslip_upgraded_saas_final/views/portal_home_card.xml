<odoo>
    <template id="portal_payslip_home_card" inherit_id="portal.portal_my_home">
        <xpath expr="//div[contains(@class,'o_portal_card')]"
               position="after">
            <div class="row mt-3">
                <div class="col-lg-4 col-md-6 mb-3">
                    <a href="/my/payslips" class="text-decoration-none">
                        <div class="card p-3 h-100 shadow-sm">
                            <div class="d-flex align-items-center">
                                <div class="me-3 display-6">
                                    <i class="fa fa-file-invoice-dollar"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0">My Payslips</h5>
                                    <small class="text-muted">View and download your payslips</small>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </xpath>
    </template>
</odoo>

<odoo>
    <record id="view_res_config_settings_inherit_portal_payslip" model="ir.ui.view">
        <field name="name">res.config.settings.portal.payslip</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="settings" position="inside">
                <div class="app_settings_block" data-section="portal_payslip_upgraded">
                    <h2>Portal Payslip - PDF Settings</h2>
                    <div class="row mt-2">
                        <div class="col-6">
                            <field name="signature_attachment" widget="many2one"/>
                            <p class="text-muted small">Upload a PDF page containing the HR signature to be merged on payslip PDFs.</p>
                        </div>
                        <div class="col-6">
                            <field name="watermark_attachment" widget="many2one"/>
                            <p class="text-muted small">Upload a PDF page to be used as a watermark (one-page PDF recommended).</p>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>

<odoo>
    <template id="portal_my_payslips_page" name="My Payslips">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h2>My Payslips</h2>

                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Payslip</th>
                            <th>Period</th>
                            <th>Status</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="payslips" t-as="slip">
                            <tr>
                                <td><t t-esc="slip.number"/></td>
                                <td><t t-esc="slip.date_from"/> - <t t-esc="slip.date_to"/></td>
                                <td><t t-esc="slip.state"/></td>
                                <td>
                                    <a t-attf-href="/my/payslips/{{ slip.id }}/download"
                                       class="btn btn-primary btn-sm">
                                        Download PDF
                                    </a>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>

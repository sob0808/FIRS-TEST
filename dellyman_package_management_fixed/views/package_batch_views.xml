<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_package_batch_tree" model="ir.ui.view">
    <field name="name">package.batch.tree</field>
    <field name="model">package.batch</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="arrival_date"/>
        <field name="expected_quantity"/>
        <field name="total_packages"/>
        <field name="delivered_packages"/>
        <field name="returned_packages"/>
        <field name="status"/>
      </tree>
    </field>
  </record>

  <record id="view_package_batch_form" model="ir.ui.view">
    <field name="name">package.batch.form</field>
    <field name="model">package.batch</field>
    <field name="arch" type="xml">
      <form string="Package Batch">
        <sheet>
          <group>
            <field name="name"/>
            <field name="arrival_date"/>
            <field name="expected_quantity"/>
            <field name="status"/>
          </group>
          <notebook>
            <page string="Packages">
              <field name="package_ids">
                <tree>
                  <field name="name"/>
                  <field name="current_status"/>
                  <field name="customer_name"/>
                </tree>
              </field>
            </page>
            <page string="Summary">
              <group>
                <field name="total_packages" readonly="1"/>
                <field name="delivered_packages" readonly="1"/>
                <field name="returned_packages" readonly="1"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_package_batch_tree" model="ir.actions.act_window">
    <field name="name">Batches</field>
    <field name="res_model">package.batch</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>

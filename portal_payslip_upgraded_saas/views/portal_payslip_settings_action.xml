    <!-- Optional: menu under Settings (visible to Settings users) -->
    <menuitem id="menu_portal_payslip_root" name="Portal Payslip" parent="base.menu_administration" sequence="95"/>
    <menuitem id="menu_portal_payslip_settings" name="Payslip Settings" parent="menu_portal_payslip_root" action="action_portal_payslip_settings" sequence="1"/>
</odoo>

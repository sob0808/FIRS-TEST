
<odoo>
  <template id="template">
    <t t-call="web.external_layout">
      <div class="page">
        <h2>Mattobell Payslip</h2>
        <p><strong>Employee:</strong> <t t-esc="doc.employee_id.name"/></p>
        <p><strong>Period:</strong> <t t-esc="doc.date_from"/> - <t t-esc="doc.date_to"/></p>
        <table class="table table-sm">
            <thead><tr><th>Description</th><th>Amount</th></tr></thead>
            <tbody>
              <t t-foreach="doc.line_ids" t-as="l">
                <tr><td><t t-esc="l.name"/></td><td><t t-esc="l.total"/></td></tr>
              </t>
            </tbody>
        </table>
      </div>
    </t>
  </template>
</odoo>

<odoo>
    <!-- List View -->
    <record id="view_package_batch_list" model="ir.ui.view">
        <field name="name">package.batch.list</field>
        <field name="model">package.batch</field>
        <field name="arch" type="xml">
            <list string="Batches">
                <field name="name"/>
                <field name="date_created"/>
                <field name="package_count"/>
                <field name="arrival_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_package_batch_form" model="ir.ui.view">
        <field name="name">package.batch.form</field>
        <field name="model">package.batch</field>
        <field name="arch" type="xml">
            <form string="Batch">
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="date_created" readonly="1"/>
                        <field name="arrival_date"/>
                        <field name="package_count" readonly="1"/>
                    </group>

                    <group string="Packages">
                        <field name="package_ids"
                               widget="one2many_list"
                               mode="tree,form"
                               context="{'default_batch_id': active_id}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="current_status"/>
                                <field name="location_id"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>

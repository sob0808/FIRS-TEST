<odoo>
  <record id="view_package_batch_list" model="ir.ui.view">
    <field name="name">package.batch.list</field>
    <field name="model">package.batch</field>
    <field name="arch" type="xml">
      <list>
        <field name="sequence"/>
        <field name="arrival_date"/>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="view_package_batch_form" model="ir.ui.view">
    <field name="name">package.batch.form</field>
    <field name="model">package.batch</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="sequence" readonly="1"/>
            <field name="arrival_date"/>
            <field name="name"/>
          </group>
          <notebook>
            <page string="Packages">
              <field name="package_ids">
                <list editable="bottom">
                  <field name="name"/>
                  <field name="ord_id"/>
                  <field name="current_status"/>
                  <field name="location_id"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>

<odoo>
    <!-- List View -->
    <record id="view_package_location_list" model="ir.ui.view">
        <field name="name">package.location.list</field>
        <field name="model">package.location</field>
        <field name="arch" type="xml">
            <list string="Locations">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_package_location_form" model="ir.ui.view">
        <field name="name">package.location.form</field>
        <field name="model">package.location</field>
        <field name="arch" type="xml">
            <form string="Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<odoo>
    <record id="view_package_order_list" model="ir.ui.view">
        <field name="name">package.order.list</field>
        <field name="model">package.order</field>
        <field name="arch" type="xml">
            <list string="Packages">
                <field name="name"/>
                <field name="ord_id"/>
                <field name="batch_id"/>
                <field name="current_status"/>
                <field name="location_id"/>
            </list>
        </field>
    </record>

    <record id="view_package_order_form" model="ir.ui.view">
        <field name="name">package.order.form</field>
        <field name="model">package.order</field>
        <field name="arch" type="xml">
            <form string="Package">
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="ord_id"/>
                        <field name="batch_id"/>
                        <field name="current_status"/>
                        <field name="location_id"/>
                    </group>

                    <group>
                        <field name="package_description"/>
                        <field name="customer_name"/>
                        <field name="customer_phone"/>
                        <field name="customer_address"/>
                    </group>

                    <footer>
                        <button string="Set Received" type="object" name="action_set_received" class="btn-primary"/>
                        <button string="Set Assigned" type="object" name="action_set_assigned"/>
                        <button string="Set Picked" type="object" name="action_set_picked"/>
                        <button string="Set In Transit" type="object" name="action_set_in_transit"/>
                        <button string="Set Delivered" type="object" name="action_set_delivered" class="btn-success"/>
                        <button string="Set Awaiting Return" type="object" name="action_set_awaiting_return" class="btn-warning"/>
                        <button string="Set Returned" type="object" name="action_set_returned" class="btn-danger"/>
                    </footer>

                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>

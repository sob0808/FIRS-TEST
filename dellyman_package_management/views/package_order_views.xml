<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_package_order_tree" model="ir.ui.view">
    <field name="name">package.order.tree</field>
    <field name="model">package.order</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="ord_id"/>
        <field name="current_status"/>
        <field name="batch_id"/>
        <field name="customer_name"/>
      </tree>
    </field>
  </record>

  <record id="view_package_order_form" model="ir.ui.view">
    <field name="name">package.order.form</field>
    <field name="model">package.order</field>
    <field name="arch" type="xml">
      <form string="Package">
        <sheet>
          <group>
            <field name="name"/>
            <field name="ord_id"/>
            <field name="batch_id"/>
            <field name="current_status"/>
          </group>
          <group>
            <field name="package_description"/>
            <field name="customer_name"/>
            <field name="customer_phone"/>
            <field name="customer_address"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_package_order_tree" model="ir.actions.act_window">
    <field name="name">Packages</field>
    <field name="res_model">package.order</field>
    <field name="view_mode">tree,form,kanban</field>
  </record>
</odoo>

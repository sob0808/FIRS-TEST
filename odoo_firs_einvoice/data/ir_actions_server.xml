<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Validate Invoice Server Action -->
        <record id="action_firs_validate_invoice" model="ir.actions.server">
            <field name="name">Validate FIRS Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
action = records.action_firs_validate()
            </field>
        </record>

        <!-- Sign Invoice Server Action -->
        <record id="action_firs_sign_invoice" model="ir.actions.server">
            <field name="name">Sign FIRS Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
action = records.action_firs_sign()
            </field>
        </record>

        <!-- Confirm Invoice Server Action -->
        <record id="action_firs_confirm_invoice" model="ir.actions.server">
            <field name="name">Confirm FIRS Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
action = records.action_firs_confirm()
            </field>
        </record>

        <!-- Validate IRN Server Action -->
        <record id="action_firs_validate_irn" model="ir.actions.server">
            <field name="name">Validate FIRS IRN</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
action = records.action_firs_validate_irn()
            </field>
        </record>
    </data>
</odoo>


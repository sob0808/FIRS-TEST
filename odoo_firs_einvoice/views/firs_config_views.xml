<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_firs_einvoice" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.firs.einvoice</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='default_taxes_setting_container']" position="after">
                <block title="FIRS e-Invoice Integration" name="firs_einvoice_settings">
                    <setting id="firs_einvoice" string="FIRS e-Invoice" company_dependent="1"
                             help="Enable FIRS e-Invoice (TaxPro Max) integration for automated invoice submission">
                        <field name="firs_enabled"/>
                        <div class="content-group" invisible="not firs_enabled">
                            <div class="row mt16">
                                <label for="firs_environment" string="Environment" class="col-lg-3 o_light_label"/>
                                <field name="firs_environment"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_api_url" string="API URL" class="col-lg-3 o_light_label"/>
                                <field name="firs_api_url" placeholder="https://eivc-k6z6d.ondigitalocean.app/api"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_api_endpoint" string="API Endpoint Path" class="col-lg-3 o_light_label"/>
                                <field name="firs_api_endpoint" placeholder="/api/v1/invoice/sign"/>
                                <div class="col-lg-9">
                                    <small class="text-muted">Default: /api/v1/invoice/sign (from FIRS API docs). If base URL ends with /api, use /v1/invoice/sign</small>
                                </div>
                            </div>
                            <div class="row mt16">
                                <label for="firs_entry_id" string="Entry ID" class="col-lg-3 o_light_label"/>
                                <field name="firs_entry_id"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_service_id" string="Service ID" class="col-lg-3 o_light_label"/>
                                <field name="firs_service_id" placeholder="94ND90NR"/>
                                <div class="col-lg-9">
                                    <small class="text-muted">8 characters, alphanumeric. Required for IRN generation.</small>
                                </div>
                            </div>
                            <div class="row mt16">
                                <label for="firs_business_id" string="Business ID" class="col-lg-3 o_light_label"/>
                                <field name="firs_business_id"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_api_key" string="API Key" class="col-lg-3 o_light_label"/>
                                <field name="firs_api_key"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_client_secret" string="Client Secret" class="col-lg-3 o_light_label"/>
                                <field name="firs_client_secret" password="True"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_tin" string="Company TIN" class="col-lg-3 o_light_label"/>
                                <field name="firs_tin"/>
                            </div>
                            <div class="row mt16">
                                <label for="firs_irn_template" string="IRN Template" class="col-lg-3 o_light_label"/>
                                <field name="firs_irn_template"/>
                            </div>
                            <div class="row mt16">
                                <div class="col-12">
                                    <button name="action_test_connection" type="object"
                                            string="Test Connection" class="btn-primary"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>

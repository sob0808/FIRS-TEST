<odoo>
  <record id="view_move_form_firs" model="ir.ui.view">
    <field name="name">account.move.form.firs</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <group string="FIRS e-Invoice">
          <field name="firs_status" readonly="1"/>
          <field name="firs_irn" readonly="1"/>
          <field name="firs_qr" widget="image" readonly="1"/>
          <field name="firs_response" readonly="1" widget="text"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
